                <m:mrow/>
              </m:mrow>
              <m:annotation encoding="StarMath 5.0"> size 12{ΔP rSub { size 8{t} } =H rSub { size 8{0} } ρg} {}</m:annotation>
            </m:semantics>
          </m:math>
        </para>
        <para id="id5756396">Tổng sức cản:</para>
        <para id="id5756401">
          <m:math>
            <m:semantics>
              <m:mrow>
                <m:mstyle fontsize="12pt">
                  <m:mrow>
                    <m:mrow>
                      <m:mi>P</m:mi>
                      <m:mo stretchy="false">=</m:mo>
                      <m:mrow>
                        <m:msub>
                          <m:mi fontstyle="italic">ΔP</m:mi>
                          <m:mstyle fontsize="8pt">
                            <m:mrow>
                              <m:mi>g</m:mi>
                            </m:mrow>
                          </m:mstyle>
                        </m:msub>
                        <m:mo stretchy="false">+</m:mo>
                        <m:msub>
                          <m:mi fontstyle="italic">ΔP</m:mi>
